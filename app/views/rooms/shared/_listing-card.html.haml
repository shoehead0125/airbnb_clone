.col-sm-12.col-md-6.space-4
  .listingCardWrapper
    .container-image
      = image_tag(room.image, class: 'listing-image')
    .linktolisting
      = link_to room_path(room.id, check_in: params[:start], check_out: params[:end]) do
        %strong #{room.name}
      -if request.path_info == "/tours"
        = check_box_tag "resavation[#{i}][room_id]", room.id
