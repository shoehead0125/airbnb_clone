= form_for(room) do |f|
  .form-group
    .field-label
      = f.label :type
    .field-input
      = f.select :category, Room.categories.keys.to_a, autofocus: true, class: 'form-control'
  .form-group
    .field-label
      = f.label :max_number
    .field-input
      = f.select :max_number, options_for_select(Array(1..16)), autofocus: true, class: 'form-control'
  .form-group
    .field-label
      = f.label :address
    .field-input
      = f.text_field :address, class: 'form-control'
      = f.hidden_field :latitude, id: "hidden__latitude"
      = f.hidden_field :longitude, id: "hidden__longitude"
  - unless room.new_record?
    .form-group
    .field-label
      = f.label :name
    .field-input
      = f.text_field :name, class: 'form-control'
    .form-group
    .field-label
      = f.label :image
    .field-input
      = f.file_field :image
  .actions
    = f.submit "Save room", class: 'btn'
